        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pair_six_two"
            android:layout_alignTop="@id/six_radio_group"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="330dp"/>


        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/seven_radio_group"
            android:layout_alignTop="@+id/six_radio_group"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="60dp">

            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_seven_radioButton" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_seven_radioButton2" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_seven_radioButton3" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_seven_radioButton4" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
