                android:id="@+id/pair_six_radioButton3" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_six_radioButton4" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_six_radioButton5" />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
