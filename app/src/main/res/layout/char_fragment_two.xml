            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_five_radioButton" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_five_radioButton2" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_five_radioButton3" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_five_radioButton4" />
            <RadioButton
                android:layout_width="@dimen/r_button_five"
                android:layout_height="wrap_content"
                android:id="@+id/pair_five_radioButton5" />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pair_five_one"
            android:layout_alignTop="@id/five_radio_group"
            android:layout_marginTop="30dp"
